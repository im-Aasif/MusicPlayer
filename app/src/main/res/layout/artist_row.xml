<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_bg"
    android:clickable="true"
    android:padding="4dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/artist_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/abstract_img"
        app:border_color="#FF000000" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/artist_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Artist Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/artist_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist_name"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/artist_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Artist Albums"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/artist_tracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist_name"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/artist_album"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Artist Tracks"
        android:textSize="14sp"
        android:textStyle="normal" />

</RelativeLayout>